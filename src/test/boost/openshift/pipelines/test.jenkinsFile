node('maven') {

	properties([
	  parameters([
	     string(name: 'GITHUB'), string(name: 'PRODUCT'), string(name: 'REPO'), string(name: 'PROJECT'),
	  ])
	])

	def project = params.PROJECT

	stage("checkout") {
		git branch: "master", url: "https://github.com/${params.GITHUB}/${params.REPO}"
	}

	stage("tests") {
		withMaven(mavenSettingsConfig: 'maven') {
			sh "mvn clean test -D project=${project}"
		} 
	}
	
}

